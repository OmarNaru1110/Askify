@model List<QuestionVM>
@{
    ViewData["Title"] = "Inbox";
}
<style>
    @@media (min-width: 0){
    .g-pa-30 {
        padding: 2.14286rem !important;
    }
}
@@media (min-width: 0) {
    .g-mr-15 {
        margin-right: 1.07143rem !important;
    }
    }
@@media (min-width: 0){
    .g-mt-3 {
        margin-top: 0.21429rem !important;
    }
}


    .g-height-50 {
        height: 50px;
    }

    .g-width-50 {
        width: 50px !important;
    }

    .g-bg-secondary {
        background-color: #fafafa !important;
    }

    .u-shadow-v18 {
        box-shadow: 0 5px 10px -6px rgba(0, 0, 0, 0.15);
    }

    .g-color-gray-dark-v4 {
        color: #777 !important;
    }

    .g-font-size-12 {
        font-size: 0.85714rem !important;
    }

    .media-comment {
        margin-top:20px
    }

    .delete-question {
        color: red;
        text-decoration: none;
    }

    .delete-question:hover {
        color: red;
        text-decoration: none;
    }

</style>
<div class="list-group">
    @foreach (var user in Model)
    {
        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="media g-mb-30 media-comment">
                        <div class="media-body u-shadow-v18 g-bg-secondary g-pa-30">
                            <div class="g-mb-15">
                                @if (user.Question.IsAnonymous)
                                {
                                    <h5 class="h5 g-color-gray-dark-v1 mb-0">
                                        Anonymous
                                    </h5>
                                }
                                else
                                {
                                    <h5 class="h5 g-color-gray-dark-v1 mb-0">
                                        @user.User.UserName
                                    </h5>
                                }
                                <span class="g-color-gray-dark-v4 g-font-size-12"> @user.Question.CreatedDate </span>
                            </div>
                            <p>
                                @user.Question.Text
                            </p>

                            <ul class="list-inline d-sm-flex my-0">
                                <li class="list-inline-item ml-auto">
                                    <a asp-route-questionId="@user.Question.Id" asp-action="AnswerQuestion" class="u-link-v5 g-color-gray-dark-v4 g-color-primary--hover">
                                        <i class="fa fa-reply g-pos-rel g-top-1 g-mr-3"></i>
                                        Answer
                                    </a>
                                </li>
                                <li style="margin-left:625px" class="list-inline-item mr-auto">
                                    <a asp-action="DeleteQuestion" asp-route-id="@user.Question.Id" class="u-link-v5 g-color-danger g-color-primary--hover delete-question ">
                                        <i class="fa fa-trash g-pos-rel g-top-1 g-mr-3"></i>
                                        Delete
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    }
</div>

