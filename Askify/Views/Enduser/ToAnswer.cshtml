@model Answer
@{
    ViewData["Title"] = "Answer";
}
<style>
    @@media (min-width: 0) {
        .g-pa-30 {
            padding: 2.14286rem !important;
        }
    }

    @@media (min-width: 0) {
        .g-mr-15 {
            margin-right: 1.07143rem !important;
        }
    }

    @@media (min-width: 0) {
        .g-mt-3 {
            margin-top: 0.21429rem !important;
        }
    }


    .g-height-50 {
        height: 50px;
    }

    .g-width-50 {
        width: 50px !important;
    }

    .g-bg-secondary {
        background-color: #fafafa !important;
    }

    .u-shadow-v18 {
        box-shadow: 0 5px 10px -6px rgba(0, 0, 0, 0.15);
    }

    .g-color-gray-dark-v4 {
        color: #777 !important;
    }

    .g-font-size-12 {
        font-size: 0.85714rem !important;
    }

    .media-comment {
        margin-top: 20px
    }

    .delete-question {
        color: red;
        text-decoration: none;
    }

        .delete-question:hover {
            color: red;
            text-decoration: none;
        }

    .answer-page {
        color: inherit;
        text-decoration: none;
    }

        .answer-page:has(:hover) {
            color: inherit;
            text-decoration: none;
        }

</style>
<div class="container" >
    <div class="row">
        <div class="col-md-8">
            <div class="media g-mb-30 media-comment">
                <div class="media-body u-shadow-v18 g-bg-secondary g-pa-30">
                    <div class="g-mb-15">
                        <p>
                            @if (Model.Question.IsAnonymous)
                            {
                                <h5 class="h5 g-color-gray-dark-v1 mb-0">
                                    Anonymous
                                </h5>
                            }
                            else
                            {
                                <h5 class="h5 g-color-gray-dark-v1 mb-0">
                                    @Model.Receiver.UserName
                                </h5>
                            }
                            <br />
                            <span class="g-color-gray-dark-v4 g-font-size-12"> @Model.Question.CreatedDate </span>
                        </p>
                    </div>
                    <p>
                        @Model.Question.Text
                    </p>
                </div>
                <div class="media-body u-shadow-v18 g-bg-secondary g-pa-30">
                    <div class="g-mb-15">
                        <p>
                            <span class="h5 g-color-gray-dark-v1 mb-0">
                                @Model.Sender.UserName
                            </span>
                            <br />
                            <span class="g-color-gray-dark-v4 g-font-size-12"> @Model.CreatedDate </span>
                        </p>
                    </div>
                    <p>
                        @Model.Text
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>





