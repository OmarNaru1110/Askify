@model List<Notification>
@{
    ViewData["Title"] = "Notification";
    string isSeenColor = "background-color: #F1F8FF  !important;";
}
<style>
    @@media (min-width: 0){
    .g-pa-30 {
        padding: 2.14286rem !important;
    }
}
@@media (min-width: 0) {
    .g-mr-15 {
        margin-right: 1.07143rem !important;
    }
    }
@@media (min-width: 0){
    .g-mt-3 {
        margin-top: 0.21429rem !important;
    }
}


    .g-height-50 {
        height: 50px;
    }

    .g-width-50 {
        width: 50px !important;
    }

    .u-shadow-v18 {
        box-shadow: 0 5px 10px -6px rgba(0, 0, 0, 0.15);
    }

    .g-color-gray-dark-v4 {
        color: #777 !important;
    }

    .g-font-size-12 {
        font-size: 0.85714rem !important;
    }

    .media-comment {
        margin-top:20px;
    }

    .delete-question {
        color: red;
        text-decoration: none;
    }

    .delete-question:hover {
        color: red;
        text-decoration: none;
    }
    .answer-page {
        color: inherit;
        text-decoration: none;
    }
    .answer-page:has(:hover){
        color: inherit;
        text-decoration: none;
    }

</style>

<div class="list-group">
    @foreach (var notification in Model)
    {
        if (notification.IsSeen == true)
        {
            isSeenColor = "background-color: #fafafa !important;";
            <a class="answer-page" asp-route-notificationId="@notification.Id" asp-action="ToAnswer" asp-route-answerId="@notification.AnswerId">
                <div class="container">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="media g-mb-30 media-comment">
                                <div style="@isSeenColor" class="media-body u-shadow-v18 g-pa-30">
                                    <div class="g-mb-15">
                                        <p>
                                            <span class="h5 g-color-gray-dark-v1 mb-0">
                                                @notification.Answer.Sender.UserName
                                            </span>
                                            <span class="g-color-gray-dark-v1 mb-0">
                                                Answered your question
                                            </span>
                                            <br />
                                            <span class="g-color-gray-dark-v4 g-font-size-12"> @notification.Answer.CreatedDate </span>
                                        </p>
                                    </div>
                                    <p>
                                        @notification.Answer.Question.Text
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        }
        else
        {
            isSeenColor = "background-color: #F1F8FF  !important;";
            <a class="answer-page" asp-route-notificationId="@notification.Id" asp-action="ToAnswer" asp-route-answerId="@notification.AnswerId">
                <div class="container">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="media g-mb-30 media-comment">
                                <div style="@isSeenColor" class="media-body u-shadow-v18 g-pa-30">
                                    <div class="g-mb-15">
                                        <p>
                                            <span class="h5 g-color-gray-dark-v1 mb-0">
                                                @notification.Answer.Sender.UserName
                                            </span>
                                            <span class="g-color-gray-dark-v1 mb-0">
                                                Answered your question
                                            </span>
                                            <br />
                                            <span class="g-color-gray-dark-v4 g-font-size-12"> @notification.Answer.CreatedDate </span>
                                        </p>
                                    </div>
                                    <p>
                                        @notification.Answer.Question.Text
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        }

    }
</div>

